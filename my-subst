#!/bin/sh

# NOTE: If you change this, run "make clean" to clean out old stuff

GUILE="$1"
GUILE_READLINE_AVAILABLE="$2"
LIBRARY_DIRECTORY="$3"
PATH_PREFIX="$4"
WARNING_MESSAGE='Generated automatically by my-subst, DO NOT EDIT!'

if [ -z "$LIBRARY_DIRECTORY" ] ; then
  LIBRARY_DIRECTORY="$(pwd)"
fi

sed -e "s!@GUILE@!${GUILE}!g" \
    -e "s!@GUILE_READLINE_AVAILABLE@!${GUILE_READLINE_AVAILABLE}!g" \
    -e "s!@LIBRARY_DIRECTORY@!${LIBRARY_DIRECTORY}!g" \
    -e "s!@PATH_PREFIX@!${PATH_PREFIX}!g" \
    -e "s/@WARNING_MESSAGE@/${WARNING_MESSAGE}/g"


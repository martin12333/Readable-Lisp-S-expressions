#!/bin/sh

GUILE="$1"
LIBRARY_DIRECTORY="$2"
WARNING_MESSAGE='Generated automatically by my-subst, DO NOT EDIT!'

if [ -z "$LIBRARY_DIRECTORY" ] ; then
  LIBRARY_DIRECTORY="$(pwd)"
fi

sed -e "s!@GUILE@!${GUILE}!g" \
    -e "s!@LIBRARY_DIRECTORY@!${LIBRARY_DIRECTORY}!g" \
    -e "s/@WARNING_MESSAGE@/${WARNING}/g"


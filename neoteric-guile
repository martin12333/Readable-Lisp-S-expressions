#!/usr/bin/env expect
# By David A. Wheeler. Start up guile in "modern-expressoin" reading mode,
# so you can try it out.

spawn -noecho guile --debug -L .
# Enable readline (for ease of interface), then activate modern-expressions.
send "(begin (use-modules (ice-9 readline)) (activate-readline))\n\n"
send "(begin (set! %load-path (append %load-path '(\".\"))) (use-modules (readable sweet-impl)) (replace-read modern-read) (newline))\n"
interact

